    "User":[
        {
            "Method":"POST",
            "Endpoints":"/user/create",
            "Description":["This endpoint is used to create a user and requires various fields","the program creates UUID for each user created","It'll return the user_id which you can use to perform the favourite and watchlist functionalities","Returns StatusConflict if the user exists","On successful creation gives StatusCreated"],
            "Parameters":["RB:Firstname","RB:Lastname","RB:Email","RB:Password","RB:Age","RB:Phone_no"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/create",
                    "ReqBody":"{\"firstname\":\"viky\",\"lastname\":\"maran\",\"email\":\"vignesh@gmail.com\",\"password\":\"viky\",\"age\":\"21\",\"phone_no\":\"8667051457\"}",
                    "Response":"StatusCreated-201 and updated values"
            }
        },
        {
            "Method":"POST",
            "Endpoints":"/user/login",
            "Description":["This endpoint is used for login","Returns StatusOK if the user is existing else returns StatusUnauthorized"],
            "Parameters":["RB:Email","RB:Password"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/login",
                    "ReqBody":"{\"useremail\":\"vignesh@gmail.com\",\"password\":\"viky\"}",
                    "Response":"StatusOK-200"
            }
        },
        {
            "Method":"PUT",
            "Endpoints":"/user/update",
            "Description":["This endpoint is user for any updation in the user data"],
            "Parameters":["RB:Firstname","RB:Lastname","RB:Email","RB:Password","RB:Age","RB:Phone_no"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/update",
                    "ReqBody":"{\"firstname\":\"viky\",\"lastname\":\"maran\",\"email\":\"vignesh@gmail.com\",\"password\":\"viky\",\"age\":\"21\",\"phone_no\":\"8667051457\"}",
                    "Response":"StatusOK-200 and updated values"
            }
        }
    ],
    "Favourite":[
        {
            "Method":"GET",
            "Endpoints":"/user/favourites",
            "Description":["This endpoint returns the list of movies that is stored as favourite of a particular user","It takes users UUID from the header and returns them"],
            "Parameters":["RB:User UUID"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/favourites",
                    "ReqBody":"{\"user_id\":\"e1e66c44-d4d5-4f80-9315-c01335dbfff2\"}",
                    "Response":"[{\"uuid\": \"69db6ce6-189d-4eef-bb05-0780fd02dd19\",\"title\": \"Adanga Mar\",\"release_date\": \"2018-12-21T00:00:00Z\",\"language_name\": \"Tamil\",\"running_time\": \"02;26\"},...]"
            }
        },
        {
            "Method":"POST",
            "Endpoints":"/user/favourite/add",
            "Description":["This endpoint adds a movie to the users favourite list","In future the user_id and the movie_will be taken from the headers","On successful creation gives StatusCreated"],
            "Parameters":["RB:user UUID","RB:Movie UUID"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/favourite/add",
                    "ReqBody":"{\"user_id\":\"e1e66c44-d4d5-4f80-9315-c01335dbfff2\",\"movie_id\":\"a798fca6-0b09-471b-8741-23aa03c8bcdc\"}",
                    "Response":"StatusCreated-201 and updated values"
            }
        },
        {
            "Method":"DELETE",
            "Endpoints":"/user/favourite/remove",
            "Description":["This endpoint deletes the movie from the user favourites","In future the user_id and the movie_will be taken from the headers","Returns StatusNoContent once removed"],
            "Parameters":["RB:user UUID","RB:Movie UUID"],
            "Samplereqres":{
                    "ReqURL":"https://domain.api/user/favourite/remove",
                    "ReqBody":"{\"user_id\":\"e1e66c44-d4d5-4f80-9315-c01335dbfff2\",\"movie_id\":\"a798fca6-0b09-471b-8741-23aa03c8bcdc\"}",
                    "Response":"StatusNoContent-204"
            }
        }
    ],
