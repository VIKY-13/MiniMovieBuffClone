                    "ReqURL":"https://domain.api/movie/rating/new",
                    "ReqBody":"{\"user_id\":\"7f011417-d88a-43a3-b42a-759978263f03\",\"movie_id\":\"4744555f-b31c-492a-8653-2fa50f371182\",\"rating\":4,\"review\":\"it was a good one\"}",
                    "Response":"StatusCreated-201 and updated values"
            }
        },
        {
            "Method":"PUT",
            "Endpoints":"/movie/rating/update",
            "Description":["This endpoint is used when the user wants to change the ratings or review the he gave already"],
